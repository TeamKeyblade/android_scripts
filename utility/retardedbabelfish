# Korean
## THIS NEEDS TO BE RETRANSLATED, USED GOOGLE TRANSLATE! ##
# elif ( echo $LANG | grep -q "ko_" ); then
#	langsaved=$( echo "한국어로 저장 언어" )
#	notproperselection=$( echo "당신은 올바른 선택을하지 않았다, 다시 시도하십시오!" )
#	entertocontinue=$( echo "계속하려면 Enter 키를 누르십시오: " )

