	export REPO_PLATFORM=$(echo "jb")
	repo_branch=$(echo "android-4.3.1_r1")
	repo_name=$(echo $REPOSAOSP43)
	repo_url=$(echo "https://android.googlesource.com/platform/manifest")
	manifest_name=$(echo "default.xml")
fi

